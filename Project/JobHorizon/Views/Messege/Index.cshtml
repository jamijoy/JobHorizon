@model IEnumerable<JobHorizon.Models.User>
@{var MyMessege = ViewBag.MyMessege;}
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div align="center">
        <h2>Inbox</h2>
        <p>
            @Html.ActionLink("Home", "UserCheck", "User")
        </p>
        <p>
            @Html.ActionLink("Logout", "Logout", "User")
        </p>
        <table class="table">
            <p>
                @Html.ActionLink("Logout", "Logout", "User")
            </p>


            @foreach (var item in MyMessege)
            {
                if (item.SenderId == Int32.Parse(Session["UserId"].ToString()))
                {
                    <tr style="background-color:cornflowerblue">
                        <td>
                            @item.Messege1
                        </td>
                        <td>
                            @item.CreatedAt
                        </td>
                    </tr>
                }
                else
                {
                    <tr style="background-color:palevioletred">
                        <td>
                            @item.Messege1
                        </td>
                        <td>
                            @item.CreatedAt
                        </td>
                    </tr>
                }

            }



        </table>
        <form method="post">
            <input type="text" name="Messege1" />
            <input type="submit" name="submit" value="SEND" />
        </form>
    </div>
</body>
</html>
